@{
   ViewBag.Title = "Employer";
}
<div class="row">
    <h2>Employer</h2>
    <hr/>
</div>
<div class="row" ng-controller="EmployerController as model" ng-init="model.initialise(1)">
    <div class="row">
        <div class="col-sm-12 col-md-6 md-mb-10">         
                <a type="button" class="btn btn-primary" href="/Employer/Create/1">Add Employer</a>   
        </div>
    </div>
    <div class="">     
        <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="ng-cloak" ng-show="model.employers.length > 0">
                <div>
                    <table wt-responsive-table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                        <thead>
                            <tr role="row">
                                <th ng-click="model.order('Name')" ng-class="model.orderClass('Name')">Name</th>
                                <th ng-click="model.order('Address1')" ng-class="model.orderClass('Address1')">Address</th>
                                <th ng-click="model.order('Email')" ng-class="model.orderClass('Email')">Email</th>
                                <th ng-click="model.order('AspnetUserId')" ng-class="model.orderClass('AspnetUserId')">Number Of Employee </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="employer in model.employers" class="odd gradeX cursor" ng-click="$event.originalEvent.ngClickHandled || model.viewClient(client.ClientId)">
                                <td><span ng-bind="::employer.Name"></span></td>
                                <td><span ng-bind="::employer.Address1"></span></td>
                                <td><span ng-bind="::employer.Email"></span></td>
                                <td>{{1}}</td>
                                <td>
                                    <div class="btn-group pull-right" ng-class="{'dropup':$last}">
                                        <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true;">
                                            <i class="fa fa-chevron-down"></i>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            <li><a>View</a></li>
                                            <li><a>Edit</a></li>
                                            <li>
                                                <a ng-bootbox-confirm="Are you sure? you want to delete employee - ({{employee.Name}})" ng-bootbox-confirm-action="model.unassignExtensionNumber(extension)" ng-bootbox-confirm-action-cancel="">
                                                    Delete
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>                       
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="">
                    <div class="panel-footer">
                        @Html.Partial("Pagination/_pagination")
                    </div>
                </div>
            </div>
            <div class="col-xs-12">
                <label ng-bind="model.searchMessage"></label>
            </div>
        </div>
    </div>
</div>

